<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_block"
        android:background="@color/border_block" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical|start"
            android:scaleType="centerInside"
            android:src="@drawable/account_address"
            android:contentDescription="手机号" />

        <View
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:background="@color/divider" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:hint="请输入您的地址">
            
            <android.support.design.widget.TextInputEditText
                android:id="@+id/verify_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/font_title"
                android:inputType="phone"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:imeOptions="actionNext"
                android:tag="user_mobile"/>
            
        </android.support.design.widget.TextInputLayout>

    </FrameLayout>

    <View
        android:layout_width="34dp"
        android:layout_height="1dp"
        android:background="@android:color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical|start"
            android:scaleType="centerInside"
            android:src="@drawable/account_phone"
            android:contentDescription="密码" />

        <View
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:background="@color/divider" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:hint="请输入您的手机号码">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/verify_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/font_title"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:background="@android:color/transparent" />
        </android.support.design.widget.TextInputLayout>

    </FrameLayout>

    <View
        android:layout_width="34dp"
        android:layout_height="1dp"
        android:background="@android:color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical|start"
            android:scaleType="centerInside"
            android:src="@drawable/account_password"
            android:contentDescription="密码" />

        <View
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:background="@color/divider" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:hint="请输入您要设置的密码">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/account_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/font_title"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:background="@android:color/transparent" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/check_visible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/margin_block"
            android:layout_marginEnd="@dimen/margin_block"
            android:layout_gravity="end|center_vertical"
            android:gravity="center"
            style="@style/PasswordCheckboxTheme"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_block"/>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="15dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_title"
        android:gravity="center"
        android:text="提交"
        android:background="@drawable/bg_btn_main"/>
    
</LinearLayout>
