<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zhulei.com.stone">

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        xmlns:tools="http://schemas.android.com/tools"
        tools:replace="android:label"
        android:name=".others.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app"
            android:theme="@style/AppTheme.NoActionBar.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/login"
            android:windowSoftInputMode="adjustPan|stateHidden"/>

        <activity
            android:name=".ui.activity.ProfileActivity"
            android:label="@string/profile"
            android:theme="@style/AppTheme.NoActionBar.Main"
            android:windowSoftInputMode="adjustPan|stateHidden"/>

        <activity
            android:name=".ui.activity.PostActivity"
            android:label="@string/post"
            android:windowSoftInputMode="adjustPan|stateHidden"/>

        <activity
            android:configChanges="orientation|screenSize"
            android:name="me.nereo.multi_image_selector.MultiImageSelectorActivity" />

        <activity
            android:name=".ui.activity.ImageActivity"
            android:theme="@style/AppTheme.NoActionBar.Translucent"
            android:label="@string/image"
            android:process=":picture"/>

        <activity
            android:name=".ui.activity.CircleActivity"
            android:label="@string/circle"/>

        <activity
            android:name=".ui.activity.PaintActivity"
            android:label="@string/paint"/>

        <activity
            android:name="cn.bmob.v3.update.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>

        <activity
            android:name=".ui.activity.BirthDaySettingActivity"
            android:label="@string/birthday_setting"/>

        <activity
            android:name=".ui.activity.CommentActivity"
            android:label="@string/comment_list"
            android:windowSoftInputMode="stateHidden"/>

        <activity android:name=".ui.activity.PersonalPostActivity"
            android:label="@string/personal_post"/>

        <activity android:name=".ui.activity.TestRetrofitActivity"
            android:label="测试"/>

    </application>

</manifest>